@model KalaMarket.DataLayer.Entities.ProductEntities.Category

@{
    ViewData["Title"] = "ویرایش کردن زیردسته";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="UpdateCategories" method="post" style="margin-top:5%;" enctype="multipart/form-data">

            <input type="hidden" asp-for="SubCategory"/>
            <input type="hidden" asp-for="CategoryId"/>

            <div class="form-group">
                <label asp-for="CategoryFaTitle" for="emailAddress">عنوان زیردسته به فارسی</label>
                <input asp-for="CategoryFaTitle" type="text" parsley-trigger="change" class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="CategoryFaTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryEnTitle" for="emailAddress">عنوان زیردسته به انگلیسی</label>
                <input asp-for="CategoryEnTitle" type="text" parsley-trigger="change" class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="CategoryEnTitle" class="text-danger"></span>
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-success waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="ShowAllCategories" class="btn btn-danger waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

