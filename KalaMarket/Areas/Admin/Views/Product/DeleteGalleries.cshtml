@model KalaMarket.DataLayer.Entities.ProductEntities.ProductGallery
@{
    ViewData["Title"] = "DeleteGalleries";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">


        <form asp-action="DeleteSlider" method="post" style="margin-top:5%;">
            <input asp-for="GalleryId" type="hidden" />
            <div class="form-group">
                <label asp-for="GalleryTitle" for="emailAddress">عنوان اسلایدر</label>
                <input readonly="readonly" asp-for="GalleryTitle" type="text" parsley-trigger="change" class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="GalleryTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GalleryImage" for="emailAddress">تصویر اسلایدر</label>
                <input asp-for="GalleryImage" type="hidden">
                <span asp-validation-for="GalleryImage" class="text-danger"></span>
                <img width="140" height="130" class="img-thumbnail" src="~/CssSite/ImageSite/@Model.GalleryImage" />
            </div>
            <div class="form-group text-right m-b-0">
                <button class="btn btn-danger waves-effect waves-light" type="submit">
                    حذف
                </button>
                <a asp-action="Index" class="btn btn-default waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

