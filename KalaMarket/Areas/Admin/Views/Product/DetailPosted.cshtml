@using KalaMarket.Core.ViewModel
@model IEnumerable<DetailPostedVM>

<div class="col-sm-12">
    <div class="panel">
        <div class="panel-body" style="margin-top:5%;">


            <div class="editable-responsive">
                <div id="datatable-editable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="row">
                            <div class="col-sm-2">
                                <input type="text" name="FilterByRefId" placeholder="جستجو بر اساس شناسه پرداخت" value="@ViewBag.FilterByRefId" class="form-control" />
                            </div>
                            <div class="col-sm-2">
                                <input type="submit" value="فیلتر کن" class="btn btn-success" />
                                <a href="/Admin/Product/detailposted" class="btn btn-danger">حذف فیلتر</a>
                            </div>
                        </div>
                        <div class="col-sm-12">

                            @if (TempData["Result"] != null)
                            {
                                if (TempData["Result"].ToString() == "true")
                                {
                                    <div class="alert alert-success alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        ثبت اطلاعات با موفقیت انجام شد .
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        خطادر انجام عملیات .
                                    </div>
                                }
                            }

                            @if (TempData["NotFoundSlider"] != null)
                            {
                                <script>

                                    setTimeout(function () {
                                        Swal.fire({
                                            position: 'top-end',
                                            icon: 'error',
                                            title: 'سفارشی با این مشخصات یافت نشد .',
                                            showConfirmButton: false,
                                            timer: 3000
                                        })
                                    }, 50)

                                </script>
                            }
                            <table class="table table-striped dataTable no-footer" id="datatable-editable" role="grid" aria-describedby="datatable-editable_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 443px;" aria-label="مرورگر: activate to sort column ascending">تصویر محصول</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">نام محصول</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">نام گارانتی</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">رنگ</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">قیمت</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">نام گیرنده</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">آدرس</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">وضعیت</th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-editable" rowspan="1" colspan="1" style="width: 285px;" aria-label="سیستن عامل: activate to sort column ascending">شناسه پرداخت</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() > 0)
                                    {
                                        @foreach (var item in Model)
                                        {
                                    <tr class="gradeX odd" role="row">
                                        <td class="sorting_1"><img width="140" height="130" class="img-thumbnail" src="~/CssSite/ImageSite/@item.ProductImage" /></td>
                                        <td class="sorting_1">@item.ProductName </td>
                                        <td class="sorting_1"> @item.GuaranteeName</td>
                                        <td class="sorting_1">@item.ColorName </td>
                                        <td class="sorting_1">@item.ProductPrice </td>
                                        <td class="sorting_1">@item.RecipientName </td>
                                        <td class="sorting_1">@item.Address </td>
                                        @if (item.IsPaid == true)
                                        {
                                            <td class="sorting_1 text-success" style="font:bold">پرداخت شده</td>
                                            <td class="sorting_1">@item.RefId</td>
                                        }
                                        else
                                        {
                                            <td class="sorting_1 text-danger" style="font:bold">پرداخت نشده</td>
                                            <td class="sorting_1">شناسه ای وجود ندارد</td>
                                        }
                                    </tr>

                                        }
                                    }
                                    else
                                    {
                                        <tr class="gradeX odd" role="row">
                                            <td colspan="5" class="sorting_1">سفارشی موجود نمی باشد .</td>

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                           
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end: panel body -->

    </div> <!-- end panel -->
</div> <!-- end col-->
