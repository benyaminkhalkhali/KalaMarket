@model KalaMarket.DataLayer.Entities.ProductEntities.ProductPrice

@{
    ViewData["Title"] = "AddPrice";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">



        <form asp-action="AddPrice" method="post" style="margin-top:5%;">
            <input type="hidden" asp-for="ProductId" value="@ViewBag.id" />
            <div class="form-group">
                <label asp-for="MainPrice" for="emailAddress">قیمت اصلی</label>
                <input asp-for="MainPrice" type="text" parsley-trigger="change" placeholder="قیمت را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="MainPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpecialPrice" for="emailAddress">قیمت ویژه</label>
                <input asp-for="SpecialPrice" type="text" parsley-trigger="change" placeholder="قیمت ویژه را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">

            </div>
            <div class="form-group">
                <label asp-for="EndDateDiscount" for="emailAddress">تاریخ اتمام تخفیف</label>
                <input asp-for="EndDateDiscount" type="text" parsley-trigger="change" placeholder="تاریخ اتمام تخفیف را وارد نمایید " id="datepicker" class="form-control" data-parsley-id="6">

            </div>
            <div class="form-group">
                <label asp-for="Count" for="emailAddress">تعداد موجود</label>
                <input asp-for="Count" type="text" parsley-trigger="change" placeholder="تعداد موجود در انبار را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxOrderCount" for="emailAddress">حداکثر تعداد خرید کاربر</label>
                <input asp-for="MaxOrderCount" type="text" parsley-trigger="change" placeholder="حداکثر تعداد خرید توسط کاربر را وارد نمایید " class="form-control" id="emailAddress" data-parsley-id="6">
                <span asp-validation-for="MaxOrderCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorId" for="emailAddress">رنگ بندی</label>
                <select class="form-control" asp-for="ColorId" asp-items="@(new SelectList(ViewBag.color,"ColorId","ColorName"))"></select>

                <span asp-validation-for="MaxOrderCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductGuaranteeId" for="emailAddress">گارانتی</label>
                <select class="form-control" asp-for="ProductGuaranteeId" asp-items="@(new SelectList(ViewBag.guarantee,"GuaranteeId","GuaranteeName"))"></select>

                <span asp-validation-for="ProductGuaranteeId" class="text-danger"></span>
            </div>


            <div class="form-group text-right m-b-0">
                <button class="btn btn-success waves-effect waves-light" type="submit">
                    ثبت اطلاعات
                </button>
                <a asp-action="ShowAllPrice" class="btn btn-danger waves-effect waves-light m-l-5">
                    لغو
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts{


    <script type="text/javascript">
        $(function () {
            // حالت پیشفرض
            $('#datepicker').datepicker();
        });
    </script>

}

