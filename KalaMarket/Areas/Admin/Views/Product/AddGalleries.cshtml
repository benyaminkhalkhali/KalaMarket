@model KalaMarket.DataLayer.Entities.ProductEntities.ProductGallery
@{
    ViewData["Title"] = "AddGalleries";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4 p-3">
    <div class="card-box">

    </div>

    <form asp-action="AddGalleries" method="post" style="margin-top:5%;" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductId" value="@ViewBag.id" />
        <div class="form-group">
            <label asp-for="GalleryTitle">عنوان گالری محصول</label>
            <input asp-for="GalleryTitle" type="text" parsley-trigger="change" placeholder="عنوان گالری را وارد کنید" class="form-control" id="userName" data-parsley-id="4">
            <span asp-validation-for="GalleryTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GalleryImage">عکس گالری محصول</label>
            <input name="galleryFile" type="file" parsley-trigger="change" class="form-control" id="userName" data-parsley-id="4">
        </div>

        <div class="form-group">
            <div class="checkbox">
                <input asp-for="IsActive" id="remember-1" type="checkbox" data-parsley-multiple="remember-1" data-parsley-id="13">
                <label asp-for="IsActive" for="remember-1"> آیا فعال باشد؟ </label>
            </div>
        </div>

        <div class="form-group text-right m-b-0">
            <button class="btn btn-success waves-effect waves-light" type="submit">
                ثبت اطلاعات
            </button>
            <a asp-action="ShowAllGalleries" class="btn btn-danger waves-effect waves-light m-l-5">
                لغو
            </a>
        </div>

    </form>
</div>



