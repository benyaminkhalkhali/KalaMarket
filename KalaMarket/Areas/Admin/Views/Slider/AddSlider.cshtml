@model KalaMarket.DataLayer.Entities.MainSlider
@{
    ViewData["Title"] = "ایجاد اسلایدر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="col-lg-12 mt-4 p-3">
        <div class="card-box">
            
            </div>

            <form asp-action="AddSlider" method="post" style="margin-top:5%;" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="SliderTitle">عنوان اسلایدر</label>
                    <input asp-for="SliderTitle" type="text" parsley-trigger="change" placeholder="عنوان اسلایدر را وارد کنید" class="form-control" id="userName" data-parsley-id="4">
                    <span asp-validation-for="SliderTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderAlt">alt اسلایدر</label>
                    <input asp-for="SliderAlt" type="text" parsley-trigger="change" placeholder="Alt اسلایدر را وارد کنید" class="form-control" id="userName" data-parsley-id="4">
                </div>
                <div class="form-group">
                    <label asp-for="SliderSort">ترتیب اسلایدر</label>
                    <input asp-for="SliderSort" type="number" parsley-trigger="change" class="form-control" id="userName" data-parsley-id="4">
                    <span class="text-danger">@Html.ValidationMessage("ErrorSort")</span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderLink">لینک اسلایدر</label>
                    <input asp-for="SliderLink" type="text" parsley-trigger="change" placeholder="لینک اسلایدر را وارد کنید" class="form-control" id="userName" data-parsley-id="4">
                </div>
                <div class="form-group">
                    <label asp-for="SliderImage">عکس اسلایدر</label>
                    <input name="file" type="file" parsley-trigger="change" class="form-control" id="userName" data-parsley-id="4">
                    <span asp-validation-for="SliderImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <input asp-for="IsActive" id="remember-1" type="checkbox" data-parsley-multiple="remember-1" data-parsley-id="13">
                        <label asp-for="IsActive" for="remember-1"> آیا فعال باشد؟ </label>
                    </div>
                </div>

                <div class="form-group text-right m-b-0">
                    <button class="btn btn-success waves-effect waves-light" type="submit">
                        ثبت اطلاعات
                    </button>
                    <a asp-action="Index" class="btn btn-danger waves-effect waves-light m-l-5">
                        لغو
                    </a>
                </div>

            </form>
        </div>
   

