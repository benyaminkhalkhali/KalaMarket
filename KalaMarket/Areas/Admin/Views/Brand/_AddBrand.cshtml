@using KalaMarket.DataLayer.Entities.ProductEntities
@model Brand

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddBrands" method="post"
              data-ajax="true"
              data-Success="Refresh"
              enctype="multipart/form-data">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
                <button type="submit" value="Create" class="btn btn-success">ثبت</button>
            </div>

        </form>
    </div>
</div>
