@model EditUserVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var informationuser = ViewBag.information as InformationAccountVM;
}



<!-- profile------------------------------->
<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <div class="col-lg-3 col-md-3 col-xs-12 pr">

                        <partial name="_SidebarUser" model="informationuser" />

                    </div>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        <div class="profile-content">
                            <div class="profile-stats">
                                <div class="profile-address">
                                    <div class="middle-container">
                                        <form asp-action="EditUser" method="post" class="form-checkout">
                                            <div class="form-checkout-row">

                                                <div class="form-checkout-valid-row">

                                                    <label asp-for="Email" for="apt-id"></label>
                                                    <input asp-for="Email" type="text" class="input-name-checkout js-input-apt-id form-control disabled">

                                                </div>

                                                <div class="form-checkout-valid-row">

                                                    <label asp-for="UserNameAndFamily" for="apt-id"></label>
                                                    <input asp-for="UserNameAndFamily" type="text" class="input-name-checkout js-input-apt-id form-control">

                                                </div>
                                                
                                                <div class="form-checkout-valid-row">

                                                    <label asp-for="Phone" for="apt-id"></label>
                                                    <input asp-for="Phone" type="text" class="input-name-checkout js-input-apt-id form-control">

                                                </div>

                                                <div class="AR-CR">
                                                    <button type="submit" class="btn-registrar"> ثبت ویرایش</button>
                                                    <a href="#" class="cancel-edit-address" data-dismiss="modal" aria-label="Close">بازگشت</a>
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<!-- profile------------------------------->