@model KalaMarket.DataLayer.Entities.ProductEntities.FAQ.Comment

@using KalaMarket.Core.ExtensionMethod;




<div class="tab-pane fade" id="User-comments" role="tabpanel" aria-labelledby="User-comments-tab">
    <div class="comments">
        <div id="tab-review" class="tab-pane">



            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <p class="alert alert-info">@ViewBag.Message</p>
            }
            else
            {
                <p class="alert alert-danger text-center">دیدگاه شما ثبت شد و در انتظار بررسی می‌باشد</p>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td style="width: 50%;"><strong><span>@User.Identity.Name</span></strong></td>
                            <td class="text-right"><span>@Model.CreateDate.ToShamsi()</span></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <p>@Model.CommentDescription</p>
                                <div class="rating">
                                    @for (int i = 1; i <= Model.Score; i++)
                                    {
                                        <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    }
                                    @for (int j = 0; j < 5 - Model.Score; j++)
                                    {
                                        <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
                                    }
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
